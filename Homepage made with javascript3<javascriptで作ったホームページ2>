//c.js

$(function(){
  $(".japan").click(function(){
    $("h2").text("日本国");
    $(".kaisetsu").text("日本は東アジアに位置する島国です。日本の人口は約1億3000万人です。 日本の首都は東京で、東京スカイツリーや浅草、新宿などの観光地が有名です。");
    $(".nippon").attr("src","https://d37wt07f7gwihi.cloudfront.net/jp/images/3621670/caa781a7d61bcea93a60b0eb7013ea05d48ca724.jpeg?w=400&h=420&quality=75&fit=cover&fm=auto");
    $(".japan").css("border","2px solid skyblue");
    $(".china,.korea,.america").css("border","2px solid black");
  });
  $(".china").click(function(){
    $("h2").text("中華人民共和国");
    $(".kaisetsu").text("中華人民共和国は、中華民国統治下の中国で1921年7月に結党された中国共産党が1949年10月1日に毛沢東中国共産党主席が北京市天安門広場で建国宣言を行ったことで成立しました。中国の人口は約14億人で首都は北京です。");
    $(".nippon").attr("src","https://whitehole.asia/wp-content/uploads/%E5%BE%AE%E4%BF%A1%E5%9B%BE%E7%89%87_20180921200737-1024x768.jpg");
    $(".china").css("border","2px solid skyblue");
    $(".japan,.korea,.america").css("border","2px solid black");
  });
  $(".korea").click(function(){
    $("h2").text("大韓民国");
    $(".kaisetsu").text("大韓民国は、東アジアの朝鮮半島に存在する共和制国家です。首都はソウル特別市です。文化では、BTSやBlackpinkなどのKpopが有名です。");
    $(".nippon").attr("src","https://d37wt07f7gwihi.cloudfront.net/jp/images/3396408/0bb41a25264c9579494811e9fdab7a93d2d395fa.jpeg?w=400&h=420&quality=75&fit=cover&fm=auto");
    $(".korea").css("border","2px solid skyblue");
    $(".japan,.china,.america").css("border","2px solid black");
  });
  $(".P").click(function(){
    $(".Z li:first").appendTo(".Z ul");
  });
  $(".A").click(function(){
    $(".Z li:last").prependTo(".Z ul");
  });
$(".hyouji,.shutsugen").hover(function(){
    $(".shutsugen").toggle();
});
});
